<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.order_conf_fragments.ResultFragment"
    android:paddingStart="10dp"
    android:background="@color/start_bg"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layout_success"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@drawable/succ_sent"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Ваш заказ успешно отправлен на обработку!"
            android:textSize="22sp"
            android:textColor="@color/cal_frame"
            android:fontFamily="@font/gilroy_bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_fail"
        android:visibility="gone"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fail_icon"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="При отправке произошла ошибка, попытайтесь позже!"
            android:textSize="22sp"
            android:textColor="@color/cal_frame"
            android:fontFamily="@font/gilroy_bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_limit"
        android:visibility="gone"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:src="@drawable/pizza_sad"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Вы достигли лимита в 5 активных заказов.\nПовторите попытку позже"
            android:textSize="20sp"
            android:textColor="@color/cal_frame"
            android:fontFamily="@font/gilroy_bold"/>

    </LinearLayout>

</FrameLayout>