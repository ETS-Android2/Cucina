<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/card_bg"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/card"
        app:cardCornerRadius="18dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginBottom="2dp"
                android:textColor="@color/header_strong"
                android:textSize="20sp"
                android:layout_toStartOf="@+id/btns"
                android:id="@+id/name"
                android:fontFamily="@font/gilroy_bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/btns"
                android:layout_below="@+id/name"
                android:id="@+id/dishes"
                android:textColor="@color/header_weak" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/dishes"
                android:layout_alignParentStart="true"
                android:id="@+id/warning_img"
                android:visibility="gone"
                android:src="@drawable/ic_warning"
                android:textColor="@color/header_weak" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/btns"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:padding="3dp">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="@color/header_weak"
                    android:text="+"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:id="@+id/btn_add"
                    android:background="@android:color/transparent"
                    tools:ignore="HardcodedText" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/layout_background">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/header_weak"
                            android:id="@+id/counter"
                            android:text="0"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"/>

                </androidx.cardview.widget.CardView>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="âˆ’"
                    android:layout_marginTop="1dp"
                    android:textSize="22sp"
                    android:textColor="@color/header_weak"
                    android:gravity="center"
                    android:id="@+id/btn_remove"
                    android:background="@android:color/transparent"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>