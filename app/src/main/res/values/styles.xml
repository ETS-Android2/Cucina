<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ForPreLoadScr">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/start_bg</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusNav</item>
        <item name="android:statusBarColor">@color/start_bg</item>
    </style>

    <style name="AppTheme.Universal">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ForReg" parent="AppTheme.Universal">
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

</resources>